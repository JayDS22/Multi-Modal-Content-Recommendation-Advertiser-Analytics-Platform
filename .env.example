# Environment Variables for Multi-Modal Recommendation Platform
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=multimodal-recommendation-platform
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# API Keys & Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recommendation_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================================================
# REDIS (Cache & Queue)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================================================
# MODEL PATHS
# ============================================================================
MODEL_CHECKPOINT_PATH=checkpoints/best_model.pth
FAISS_INDEX_PATH=data/embeddings/faiss.index
METADATA_PATH=data/embeddings/metadata.pkl

# ============================================================================
# TRAINING
# ============================================================================
TRAIN_DATA_PATH=data/train.json
VAL_DATA_PATH=data/val.json
TEST_DATA_PATH=data/test.json

BATCH_SIZE=256
NUM_EPOCHS=50
LEARNING_RATE=0.001
NUM_WORKERS=4

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=~/.cache/torch

# ============================================================================
# EXPERIMENT TRACKING
# ============================================================================
# Weights & Biases
WANDB_ENABLED=false
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=multimodal-recommendation
WANDB_ENTITY=your-team

# TensorBoard
TENSORBOARD_ENABLED=true
TENSORBOARD_LOG_DIR=runs

# ============================================================================
# CLOUD STORAGE (Optional)
# ============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# Google Cloud Storage
GCS_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry (Error Tracking)
SENTRY_ENABLED=false
SENTRY_DSN=your-sentry-dsn

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_AB_TESTING=true
ENABLE_RECOMMENDATION_CACHE=true
ENABLE_ASYNC_PROCESSING=true

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Worker configuration
WORKER_CONCURRENCY=10
WORKER_MAX_TASKS_PER_CHILD=1000

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Auto-reload on code changes
AUTO_RELOAD=true

# Profiling
ENABLE_PROFILING=false
PROFILER_OUTPUT_DIR=profiling

# Mock data generation
GENERATE_MOCK_DATA=true
MOCK_DATA_SIZE=10000
